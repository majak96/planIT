<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_daily_preview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <CheckBox
        android:id="@+id/checkbox_daily_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:buttonTint="@color/colorPrimary"
        android:paddingLeft="15dp" />

    <TextView
        android:id="@+id/title_daily_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/checkbox_daily_preview"
        android:textColor="@color/darkGray"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/time_daily_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/title_daily_preview"
        android:textAlignment="textEnd"
        android:textColor="@color/gray"
        android:textSize="16dp" />

</RelativeLayout>