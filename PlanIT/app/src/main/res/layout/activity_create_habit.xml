<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.CreateHabitActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_habit_create"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="20dp"
                android:background="@android:color/transparent"
                android:hint="@string/title" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="20dp"
                android:background="@android:color/transparent"
                android:hint="@string/description" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="15dp"
                android:background="@color/chatGray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/frequency"
                android:textColor="@color/darkGray"
                android:textSize="16dp" />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/habit_create_daily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonFrequencyClicked"
                    android:text="@string/daily"
                    android:textColor="@color/gray"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/habit_create_weekly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonFrequencyClicked"
                    android:text="@string/weekly"
                    android:textColor="@color/gray"
                    android:textSize="16dp" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/habit_create_daily_pick_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pick_days"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_marginTop="15dp"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp">

                    <Button
                        android:id="@+id/monday_button"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/circle"
                        android:text="M"
                        android:textColor="@color/white"/>

                    <Button
                        android:layout_toRightOf="@id/monday_button"
                        android:id="@+id/tuesday_button"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/circle"
                        android:text="T"
                        android:textColor="@color/white"/>

                    <Button
                        android:layout_toRightOf="@id/tuesday_button"
                        android:id="@+id/wednesday_button"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/circle"
                        android:text="W"
                        android:textColor="@color/white"/>

                    <Button
                        android:layout_toRightOf="@id/wednesday_button"
                        android:id="@+id/thursday_button"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/circle"
                        android:text="T"
                        android:textColor="@color/white"/>

                    <Button
                        android:layout_toRightOf="@id/thursday_button"
                        android:id="@+id/friday_button"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/circle"
                        android:text="F"
                        android:textColor="@color/white"/>

                    <Button
                        android:layout_toRightOf="@id/friday_button"
                        android:id="@+id/saturday_button"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/circle"
                        android:text="S"
                        android:textColor="@color/white"/>

                    <Button
                        android:layout_toRightOf="@id/saturday_button"
                        android:id="@+id/sunday_button"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:background="@drawable/circle"
                        android:text="S"
                        android:textColor="@color/white"/>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/habit_create_daily_pick_weeks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/num_weeks"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_marginTop="15dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp">

                    <Button
                        android:id="@+id/one_button"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/circle"
                        android:text="1"
                        android:textColor="@color/white"/>

                    <Button
                        android:layout_toRightOf="@id/one_button"
                        android:id="@+id/two_button"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/circle"
                        android:text="2"
                        android:textColor="@color/white"/>

                    <Button
                        android:layout_toRightOf="@id/two_button"
                        android:id="@+id/three_button"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/circle"
                        android:text="3"
                        android:textColor="@color/white"/>

                    <Button
                        android:layout_toRightOf="@id/three_button"
                        android:id="@+id/four_button"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/circle"
                        android:text="4"
                        android:textColor="@color/white"/>

                    <Button
                        android:layout_toRightOf="@id/four_button"
                        android:id="@+id/five_button"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/circle"
                        android:text="5"
                        android:textColor="@color/white"/>

                    <Button
                        android:layout_toRightOf="@id/five_button"
                        android:id="@+id/six_button"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/circle"
                        android:text="6"
                        android:textColor="@color/white"/>

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="15dp"
                android:background="@color/chatGray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/goal"
                android:textColor="@color/darkGray"
                android:textSize="16dp" />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/habit_create_goal_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonGoalClicked"
                    android:text="@string/achieve_all"
                    android:textColor="@color/gray"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/habit_create_goal_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonGoalClicked"
                    android:text="@string/goal_amount"
                    android:textColor="@color/gray"
                    android:textSize="16dp" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/habit_create_goal_amount_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/amount_number_of_days"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="15dp"
                android:background="@color/chatGray" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="@string/reminder"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/reminder_button"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ic_add_circle"
                    android:textColor="@color/white"
                    android:textSize="16dp"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="15dp"
                android:background="@color/chatGray" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>